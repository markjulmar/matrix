{
  "name": "matrix-screensaver",
  "version": "1.0.0",
  "description": "Matrix Digital Rain App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.matrix.screensaver",
    "productName": "matrix",
    "directories": {
      "output": "dist"
    },
    "includeSubNodeModules": true,
    "buildDependenciesFromSource": false,
    "files": [
      "main.js",
      {
        "from": "../",
        "to": "./",
        "filter": ["index.html", "js/**/*", "lib/**/*", "shaders/**/*", "assets/**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "matrix.exe",
      "extraResources": [
        {
          "from": "node_modules/electron/dist/icudtl.dat",
          "to": "icudtl.dat"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false
    }
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^24.6.4"
  }
}
